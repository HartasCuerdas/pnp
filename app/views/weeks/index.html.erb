<h1>Listing weeks</h1>

<div class="date">Today is <%= @strToday %></div>

<table class="table">
  <thead>
    <tr>
      <th>Firstday</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weeks.each do |week| %>
      <tr>
        <td><%= week.firstDay %></td>
        <td><%= week.comment %></td>
        <td><%= link_to 'Show', week, :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_week_path(week) %></td>
        <td><%= link_to 'Destroy', week, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
<%= link_to 'New Week', new_week_path, :class => 'btn btn-primary' %>
</div>