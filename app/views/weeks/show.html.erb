<div class="container col-xs-12 col-sm-5 col-md-5">

<p id="notice"><%= notice %></p>

<p>
  <strong>Firstday:</strong>
  <%= @week.firstDay %>
</p>

<p>
  <strong>Comment:</strong>
  <%= @week.comment %>
</p>

<%= link_to 'Edit', edit_week_path(@week) %> |
<%= link_to 'Back', weeks_path %>

<table class="table">
	<thead>
	  <tr>
	    <th>Days</th>
	    <th>O</th>
	    <th>D</th>
	    <th>Total</th>
	    <th>Well Registered</th>
	    <th colspan="3"></th>
	  </tr>
	</thead>
	<tbody>
	  <% @week.days.each do |day| %>
	    <tr id="<%= day.id %>">
	      <td class="<%= day.str_isTodayClass %>"><%= day.str_date %></td>
	      <td class="oTotal"><%= day.oTotal %></td>
	      <td class="dTotal"><%= day.dTotal %></td>
	      <td><%= link_to 'Total', total_day_path(day), :remote => true, :class => 'btn btn-small btn-primary' %></td>
	      <td><%= link_to day.str_wellRegistered, toggle_well_registered_day_path(day), :remote => true, :class=>"btn-day-well-registered btn btn-small " + day.str_wellRegistered_TwbsBtnStyleClass %></td>
	      <td><%= link_to 'Show', day %></td>
	      <td><%= link_to 'Edit', edit_day_path(day) %></td>
	      <td><%= link_to 'Destroy', day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	    </tr>
	  <% end %>
	</tbody>
</table>

</div>
