<% title "Day (#{@day.str_date})" %>
<% body_classes "pnp-day pnp-show" %>
<p id="notice"><%= notice %></p>

<div id="pnp-top-section">

  <p>
    <strong>Date:</strong>
    <%= @day.str_date %>
  </p>

  <h1>Listing ods</h1>

  <div class="pnp-controls">
    <%= link_to 'Edit', edit_day_path(@day), :class=>"btn btn-small btn-primary" %>
    <%= link_to 'Back', week_path(@day.week_id), :class=>"btn btn-small btn-primary" %>
  </div>

</div>

<div class="pnp-table-container">

  <table class="table">
    <thead>
      <tr>
        <th>Timekey</th>
        <th>O</th>
        <th>D</th>
      </tr>
    </thead>
			<% @day.ods.each do |od| %>
        <tr>
          <td class="timekey"><%= od.timekey %></td>
          <td><%= link_to od.str_o_enabled, toggle_o_od_path(od), :remote => true, :class=>"pnp-btn-day-od-enable btn btn-small " + od.str_o_TwbsBtnStyleClass %></td>
          <td><%= link_to od.str_d_enabled, toggle_d_od_path(od), :remote => true, :class=>"pnp-btn-day-od-enable btn btn-small " + od.str_d_TwbsBtnStyleClass %></td>
        </tr>
			<% end %> 
  </table>

</div>

<div class="pnp-clearer"></div>

<div class="pnp-controls">
	<%= link_to 'Edit', edit_day_path(@day), :class=>"btn btn-small btn-primary" %>
	<%= link_to 'Back', week_path(@day.week_id), :class=>"btn btn-small btn-primary" %>
</div>
